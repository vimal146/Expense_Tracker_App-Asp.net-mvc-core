@model IEnumerable<FinanceTracker.Models.Transaction>

@{
    ViewData["PageTitle"] = "Transactions";
    ViewData["PageActionText"] = " + New Transactions";
    ViewData["PageActionUrl"] = "/Transaction/AddOrEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-7">
        <ejs-grid id="transactions" dataSource="@Model" gridLines="None" allowSorting="true"
                  allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Category" field="CategoryTitleWithIcon"></e-grid-column>
                <e-grid-column headerText="Date" field="Date" width="110px"
                type="date" format="MMM-dd-yy" textAlign="Left"></e-grid-column>
                <e-grid-column headerText="Amount" field="FormattedAmount" textAlign="Right" width="110px"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actiontemplate" width="150px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>

    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b40">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>

</div>
<script id="actiontemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
       <a class="btn btn-sm no-a-decoration" href="/Transaction/AddOrEdit/${TransactionId}">
            <i class="fa-solid fa-pen fa-lg"></i>
      </a>
      <form action="/Transaction/Delete/${TransactionId}" method="post">
          @Html.AntiForgeryToken()
          <button type="submit" class="btn btn-sm btn-link no-a-decoration"
         onclick="return confirm(&quot; Are you sure autofocus delete this record? &quot;)">
              <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
          </button>
      </form>
    </div>
</script>